{
  "version": 1,
  "cli": {
    "analytics": false,
    "defaultCollection": "@nrwl/angular",
    "packageManager": "yarn"
  },
  "defaultProject": "formidable",
  "schematics": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "projects": {
    "formidable": {
      "projectType": "application",
      "root": "apps/formidable",
      "sourceRoot": "apps/formidable/src",
      "prefix": "formidable-frontend",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/formidable",
            "index": "apps/formidable/src/index.html",
            "main": "apps/formidable/src/main.ts",
            "polyfills": "apps/formidable/src/polyfills.ts",
            "tsConfig": "apps/formidable/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "apps/formidable/src/favicon.ico",
              "apps/formidable/src/assets"
            ],
            "styles": [
              "apps/formidable/src/styles.scss",
              "./node_modules/@angular/material/prebuilt-themes/deeppurple-amber.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "apps/formidable/src/environments/environment.ts",
                  "with": "apps/formidable/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "formidable:build:production"
            },
            "development": {
              "browserTarget": "formidable:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "formidable:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/formidable/src/**/*.ts",
              "apps/formidable/src/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/apps/formidable"
          ],
          "options": {
            "jestConfig": "apps/formidable/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "formidable-e2e": {
      "root": "apps/formidable-e2e",
      "sourceRoot": "apps/formidable-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/formidable-e2e/cypress.json",
            "tsConfig": "apps/formidable-e2e/tsconfig.e2e.json",
            "devServerTarget": "formidable:serve:development"
          },
          "configurations": {
            "production": {
              "devServerTarget": "formidable:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/formidable-e2e/**/*.{js,ts}"
            ]
          }
        }
      }
    }
  }
}
